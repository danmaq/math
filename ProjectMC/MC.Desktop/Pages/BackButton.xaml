<UserControl x:Class="MC.Desktop.Pages.BackButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MC.Desktop.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="/ChromeStyle.xaml" />
    </UserControl.Resources>
    <Button x:Name="Button"
            Style="{DynamicResource WhiteModernButtonStyleKey}"
            Click="ClickedButtonHandler">
        <Viewbox>
            <Canvas Width="512" Height="512" ClipToBounds="True" Margin="192">
                <Path Fill="White">
                    <Path.Data>
                        <PathGeometry FillRule="Nonzero"
                                      Figures="M281.5,148L204.5,226 385,226 385,286 204,286 281.5,365 226.5,365 116.5,257.5 226.5,148 281.5,148z" />
                    </Path.Data>
                </Path>
                <Ellipse Stroke="White" StrokeThickness="38" Width="493" Height="493" Margin="11" />
            </Canvas>
        </Viewbox>
    </Button>
</UserControl>
